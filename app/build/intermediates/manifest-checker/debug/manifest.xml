        <activity android:name="com.example.shawn.classattendance.DisplaySheet" />
        <activity android:name="com.example.shawn.classattendance.CheckPassword" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.example.shawn.classattendance.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>