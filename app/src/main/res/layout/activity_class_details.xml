    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <Button
            android:id="@+id/check_status"
            style="@style/ButtonTheme1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_status"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/take_attendance"
            style="@style/ButtonTheme2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/take_attendance"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attendance_history"
            android:onClick="onClickAttendanceHistory"
            style="@style/ButtonTheme1"
